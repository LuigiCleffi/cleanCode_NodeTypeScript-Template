{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}